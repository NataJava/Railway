public class Train {

    int number;

    public Train (int number) {
        this.number=number;}

    public void search (int number, int carriage) {
        System.out.println ("Это какой номер вагона?  " + carriage);

        if (carriage==number) {
            System.out.println ("Вы на месте");}
        else  {
            System.out.println("Идите дальше");}
    }
}
